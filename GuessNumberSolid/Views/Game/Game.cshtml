@{
    ViewData["Title"] = "Game Page";
}
@model GameViewModel

<div class="text-center">
    @if (!Model.IsWinner)
    {
        @if (Model.AttemptsLeft > 0)
        {
            <h4>And the Game begins</h4>
            <p>You have @Model.AttemptsLeft attempts</p>
            <p>@Model.Hint</p>
            <div class="game-input">
                <form asp-controller="Game" asp-action="VerifyAnswer" class="col l12 m12 s12">
                    <div class="row">
                        <div class="input-field col m12 l12 s12">
                            <input asp-for="UserAnswer">
                            <label asp-for="UserAnswer">Please, type the number from @Model.LastSettings.MinValue to @Model.LastSettings.MaxValue</label>
                        </div>
                    </div>
                    <div style="text-align:right">
                        <button type="submit" class="waves-effect waves-light btn">Verify</button>
                    </div>
                </form>
            </div>
        }
        else
        {
            <h4>The Game is End</h4>
            <p>You have @Model.AttemptsLeft attempts</p>
            <div style="text-align:center">
                <form method="get">
                    <button type="submit" asp-controller="Home" asp-action="Index" class="waves-effect waves-light btn">Play again</button>
                </form>
            </div>
        }
    }
    else
    {
        <h4>You are WINNER</h4>
        <div style="text-align:center">
            <form method="get">
                <button type="submit" asp-controller="Home" asp-action="Index" class="waves-effect waves-light btn">Play again</button>
            </form>
        </div>
    }

</div>
