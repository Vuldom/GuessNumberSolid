@{
    ViewData["Title"] = "Home Page";
}
@model SettingsViewModel

<div class="text-center">
    <h6>Hello dear friend. Please fill the form and we'll see how much adventurous you are</h6>
    <div class="settings-input">
        <form asp-controller="Home" asp-action="SaveSettings" class="col l12 m12 s12">
        <div class="row">
            <div class="input-field col m12 l12 s12">
                <input asp-for="MinValue">
                <label asp-for="MinValue">Input the min number for range</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col m12 l12 s12">
                <input asp-for="MaxValue">
                <label asp-for="MaxValue">Input the max number for range</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col m12 l12 s12">
                <input asp-for="Attempts">
                <label asp-for="Attempts">Input the number of attempts</label>
            </div>
        </div>
        <div style="text-align:right">
        <button type="submit" class="waves-effect waves-light btn">Save and Continue</button>
        </div>
    </form>
    </div>
</div>
